@using TravelNurse.Components.Common.Utils
@using TravelNurse.Components.Pages.Providers
@using TravelNurseServer.Dtos.Providers.Get
@using TravelNurseServer.Enums
@using TravelNurseServer.Services
@inject IProviderService ProviderService;
<MudGrid Style="display: flex; justify-content: center; align-items: center;">
    
    <MudItem xs="12" md="4" Style="width: 100%;">
        <MudCard Style="min-height: 150px;">
            <MudCardContent  
                Style="display: flex;  align-items: center; gap: 10px; padding: 2rem;">
                <MudAvatar Size="Size.Large">
                    <MudText Typo="Typo.h6">
                        @ProviderProfileStore?.Provider?.FirstName?.Substring(0, 1)@ProviderProfileStore?.Provider?.LastName?.Substring(0, 1)
                    </MudText>
                </MudAvatar>
                <MudStack Style="flex-direction: column;">
                    <MudText Typo="Typo.subtitle2">
                        @ProviderProfileStore?.Provider?.FirstName @ProviderProfileStore?.Provider?.LastName
                    </MudText>
                    
                    <MudText Typo="Typo.subtitle2">
                        Preferred Name: @ProviderProfileStore?.Provider?.PreferredFirstName
                    </MudText>
                    
                </MudStack>
            </MudCardContent>
        </MudCard>
    </MudItem>

    <MudItem xs="12" md="8" Style="width: 100%;">
        <MudCard Style="min-height: 150px; display: flex; justify-content: center; align-items: flex-start; padding-left: 2rem;">
            <MudText Typo="Typo.subtitle2">
                Available Date: @ProviderProfileStore?.Provider?.AvailabilityDate.ToString("MM/dd/yyyy")
            </MudText>

            <MudStack Row Justify="Justify.Center" AlignItems="AlignItems.Center">
                <MudText Typo="Typo.subtitle2">
                    Status: 
                </MudText>
                <MudChip T="string" Color="Color.Primary">
                    @CommonHelpers.SplitCamelCase(ProviderProfileStore.Provider?.Status)
                </MudChip>
            </MudStack>
        </MudCard>
    </MudItem>
    
</MudGrid>


@code {
    [CascadingParameter] 
    public ProviderProfileStore ProviderProfileStore { get; set; } = new();


}